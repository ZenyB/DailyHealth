<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#57786A"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".GetStart">

    <ImageView
        android:id="@+id/started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_black_back_layout"
        tools:layout_editor_absoluteX="0dp"></ImageView>

    <TextView
        android:id="@+id/title1"
        android:layout_width="407dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_bold_2"
        android:text="Xin chào bạn!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/started"></TextView>

    <TextView
        android:id="@+id/title2"
        android:layout_width="407dp"
        android:layout_height="54dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/lato_bold_2"
        android:text="Ta cùng bắt đầu nhé!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1"></TextView>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D9D9D9"
        android:text="Khám phá ngay!"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />


</LinearLayout>